<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:src="@drawable/mypic"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgView"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:textColor="#001122"
        android:text="Esther M. Mwaniki"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtView2"
        android:text="Track:    Android"
        android:textSize="20dp"
        android:layout_below="@id/textView"
        android:textColor="#001122"
        />

    <TextView
        android:id="@+id/txtView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtView2"
        android:layout_marginTop="41dp"
        android:text="Country:   Kenya"
        android:textSize="20dp"
        android:textColor="#001122"/>

    <TextView
        android:id="@+id/txtView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtView3"
        android:layout_marginTop="41dp"
        android:text="Email:    essymwanix@gmail.com"
        android:textSize="20dp"
        android:textColor="#001122"/>

    <TextView
        android:id="@+id/txtView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtView4"
        android:layout_marginTop="41dp"
        android:text="Phone Number: +254796007973"
        android:textSize="20dp"
        android:textColor="#001122"/>

    <TextView
        android:id="@+id/txtView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtView5"
        android:layout_marginTop="41dp"
        android:text="Slack Username:   @Essymwanix"
        android:textSize="20dp"
        android:textColor="#001122"/>

</RelativeLayout>